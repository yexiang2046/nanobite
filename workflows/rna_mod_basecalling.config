// Default parameters
params {
    // Input/Output
    reference = null          // Reference genome path
    sample_info = null       // Sample info file path
    output_dir = "results"   // Output directory

    // Basecalling parameters
    model = "rna004_130bps_hac@v5.1.0"  // RNA basecalling model
    modified_bases = "m,a,u"             // Modifications to detect
    batch_size = 100                     // Batch size for processing
    chunks_per_runner = 208              // Chunks per runner

    // Resource control
    max_cpus = 16
    max_memory = '64 GB'
}

// Process-specific configuration
process {
    // Default process settings
    cpus = 1
    memory = '8 GB'
    time = '6.h'

    withName: 'MOD_BASECALLING' {
        container = 'ontresearch/dorado:latest'
        cpus = params.max_cpus
        memory = params.max_memory
        time = params.max_time
    }
}

// Docker configuration
docker {
    enabled = true
    temp = 'auto'
    runOptions = '--gpus all'
    fixOwnership = true
}

// Resource management
executor {
    name = 'local'
    cpus = params.max_cpus
    memory = params.max_memory
}

// Error strategy
process.errorStrategy = { task.exitStatus == 125 ? 'retry' : 'finish' }
process.maxRetries = 3

// Profiles
profiles {
    standard {
        process.container = 'ontresearch/dorado:latest'
        docker.runOptions = '--gpus all'
    }
    
    cpu {
        docker.runOptions = ''
        process {
            withName: 'MOD_BASECALLING' {
                containerOptions = ''
            }
        }
    }

    test {
        params {
            max_cpus = 2
            max_memory = '8 GB'
            max_time = '1.h'
        }
    }

    high_memory {
        params {
            max_memory = '128 GB'
        }
    }
} 